[Unit]
Description=Pprfnk's distributed currency daemon
After=network.target

[Service]
User=pprfnk
Group=pprfnk

Type=forking
PIDFile=/var/lib/pprfnkd/pprfnkd.pid
ExecStart=/usr/bin/pprfnkd -daemon -pid=/var/lib/pprfnkd/pprfnkd.pid \
-conf=/etc/pprfnk/pprfnk.conf -datadir=/var/lib/pprfnkd -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
